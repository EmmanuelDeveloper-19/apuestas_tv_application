<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Logo A -->
        <ImageView
            android:id="@+id/team_a_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Nombre A -->
        <TextView
            android:id="@+id/team_a_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Equipo A"
            android:textColor="#333"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/team_a_logo"
            app:layout_constraintStart_toEndOf="@id/team_a_logo"
            app:layout_constraintTop_toTopOf="@id/team_a_logo" />

        <!-- Texto VS -->
        <TextView
            android:id="@+id/vs_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VS"
            android:textColor="#666"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/team_a_name"
            app:layout_constraintEnd_toStartOf="@id/team_b_name"
            app:layout_constraintTop_toTopOf="@id/team_a_name"
            app:layout_constraintBottom_toBottomOf="@id/team_a_name"
            app:layout_constraintHorizontal_chainStyle="packed" />

        <!-- Logo B -->
        <ImageView
            android:id="@+id/team_b_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Nombre B -->
        <TextView
            android:id="@+id/team_b_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Equipo B"
            android:textColor="#333"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/team_b_logo"
            app:layout_constraintEnd_toStartOf="@id/team_b_logo"
            app:layout_constraintTop_toTopOf="@id/team_b_logo" />

        <!-- Monto -->
        <TextView
            android:id="@+id/bet_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Monto de Apuestas: $0"
            android:textColor="#444"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/team_a_logo"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- BotÃ³n -->
        <Button
            android:id="@+id/btn_bet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Apostar"
            android:textColor="@android:color/white"
            android:backgroundTint="#FF0000"
            app:layout_constraintTop_toBottomOf="@id/bet_amount"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
