<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    tools:context=".MatchDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#df2531"
        android:elevation="4dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="TvApuestas"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/saldo_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saldo: $1,000"
                android:layout_marginRight="20dp"/>

            <TextView
                android:id="@+id/name_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuario"
                android:layout_marginRight="20dp"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:src="@drawable/icon_person"
                app:tint="#ffffff" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/actionBarSize"
            android:padding="26dp">

            <ImageView
                android:id="@+id/team_a_logo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/team_a_logo"
                app:layout_constraintEnd_toStartOf="@id/vs_text"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/team_a_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="FC Águilas"

                android:textColor="#333333"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/team_a_logo"
                app:layout_constraintStart_toStartOf="@id/team_a_logo"
                app:layout_constraintTop_toBottomOf="@id/team_a_logo" />

            <TextView
                android:id="@+id/team_a_victories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Victorias: 0"
                app:layout_constraintEnd_toStartOf="@id/team_a_empates"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/team_a_name" />

            <TextView
                android:id="@+id/team_a_empates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Empates: 0"
                app:layout_constraintEnd_toStartOf="@id/team_a_derrotas"
                app:layout_constraintStart_toEndOf="@id/team_a_victories"
                app:layout_constraintTop_toBottomOf="@id/team_a_name" />

            <TextView
                android:id="@+id/team_a_derrotas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Derrotas: 0"
                app:layout_constraintEnd_toStartOf="@+id/vs_text"
                app:layout_constraintStart_toEndOf="@id/team_a_empates"
                app:layout_constraintTop_toBottomOf="@+id/team_a_name" />


            <HorizontalScrollView
                android:id="@+id/hsv_team_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="40dp"
                android:overScrollMode="never"
                android:scrollbars="none"
                app:layout_constraintEnd_toStartOf="@id/vs_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/team_a_victories">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_team_a_apuesta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:backgroundTint="#008000"
                        android:drawableStart="@drawable/outline_add_24"
                        android:drawablePadding="8dp"
                        android:text="200"
                        android:textColor="#ffff" />

                    <ImageButton
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/minus"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:contentDescription="Menos" />


                </LinearLayout>
            </HorizontalScrollView>


            <TextView
                android:id="@+id/vs_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:text="VS"
                android:textColor="#666666"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/team_a_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/team_a_logo" />

            <ImageView
                android:id="@+id/team_b_logo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/team_b_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@id/vs_text"
                app:layout_constraintTop_toTopOf="@id/team_a_logo" />

            <TextView
                android:id="@+id/team_b_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Tigres"
                android:textColor="#333333"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/team_b_logo"
                app:layout_constraintStart_toStartOf="@id/team_b_logo"
                app:layout_constraintTop_toBottomOf="@id/team_b_logo" />

            <TextView
                android:id="@+id/team_b_victories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Victorias: 0"
                app:layout_constraintStart_toEndOf="@id/vs_text"
                app:layout_constraintTop_toBottomOf="@id/team_b_name" />

            <TextView
                android:id="@+id/team_b_empates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Empates: 0"
                app:layout_constraintEnd_toStartOf="@id/team_b_derrotas"
                app:layout_constraintStart_toEndOf="@id/team_b_victories"
                app:layout_constraintTop_toBottomOf="@id/team_b_name" />

            <TextView
                android:id="@+id/team_b_derrotas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Derrotas: 0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/team_b_empates"
                app:layout_constraintTop_toBottomOf="@+id/team_b_name" />


            <HorizontalScrollView
                android:id="@+id/hsv_team_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                android:overScrollMode="never"
                android:scrollbars="none"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/vs_text"
                app:layout_constraintTop_toBottomOf="@id/team_b_victories">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_team_b_apuesta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:backgroundTint="#008000"
                        android:drawableStart="@drawable/outline_add_24"
                        android:drawablePadding="8dp"
                        android:text="200"
                        android:textColor="#ffff" />

                    <ImageButton
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/minus"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:contentDescription="Menos" />


                </LinearLayout>
            </HorizontalScrollView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:id="@+id/bottom_sheet_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_sheet"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <TextView
            android:id="@+id/bottom_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="Información adicional"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bottom_description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Momentos clave del partido" />

        <HorizontalScrollView
            android:id="@+id/videos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <VideoView
                    android:id="@+id/richardVideo"
                    android:layout_width="300dp"
                    android:layout_height="200dp" />
            </LinearLayout>
        </HorizontalScrollView>


        <Button
            android:id="@+id/close_bottom_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Cerrar" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>